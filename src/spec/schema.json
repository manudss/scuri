{
  "$schema": "http://json-schema.org/schema",
  "id": "SpecSchema",
  "title": "Spec options Schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of component we create a spec for",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "update": {
      "type": "boolean",
      "default": false,
      "alias": "u",
      "description": "Whether or not to update a pre-existing spec file."
    },
    "type": {
      "type": "string",
      "description": "Generate spec with this methode",
      "alias": "t",
      "default": "scuri",
      "enum": ["scuri", "testbed", "spectator"]
    }
  },
  "required": ["name"]
}
